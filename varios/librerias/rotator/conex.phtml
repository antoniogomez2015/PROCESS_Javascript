<?php 
function Conectarse() 
{ 
   if (!($link=mysql_connect("servidor","usuario","contraseña"))) 
   { 
      echo "Error conectando a la base de datos."; 
      exit(); 
   } 
   if (!mysql_select_db("base de datos",$link)) 
   { 
      echo "Error seleccionando la base de datos."; 
      exit(); 
   } 
   return $link; 
} 
?>

